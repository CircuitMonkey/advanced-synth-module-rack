void oledUI_freqDisplay(int waveSel, float freq) {

  oled.display.clearDisplay();

  oled.display.setTextSize(1);
  oled.display.setCursor(0, 0);
  oled.display.print(F("V"));
  oled.display.setCursor(0, 12);
  oled.display.print(F("C"));
  oled.display.setCursor(0, 24);
  oled.display.print(F("O"));

  oled.display.drawRect(10, 0, oled.display.height(), oled.display.height(), SSD1306_WHITE);
  oled.display.drawRect(11, 1, oled.display.height()-2, oled.display.height()-2, SSD1306_WHITE);

  switch( waveSel ) {
    case 0:
      oled.display.drawBitmap( 14, 8, sin_bmp, 24, 16, 1);
      break;
    case 1:
      oled.display.drawBitmap( 14, 8, tri_bmp, 24, 16, 1);
      break;
    case 2:
      oled.display.drawBitmap( 14, 8, sqr_bmp, 24, 16, 1);
      break;
    case 3:
      oled.display.drawBitmap( 14, 8, saw_bmp, 24, 16, 1);
      break;
    case 4:
      oled.display.drawBitmap( 14, 8, fm4_bmp, 24, 16, 1);
      break;
    default:
      oled.display.drawBitmap( 14, 8, fm2_bmp, 24, 16, 1);
      break;
  }

  oled.display.setCursor(60, 10);
  oled.display.setTextSize(2);
  oled.display.println((int)freq);
  oled.display.setCursor(110, 18);
  oled.display.setTextSize(1);
  oled.display.print(F("Hz"));
}
